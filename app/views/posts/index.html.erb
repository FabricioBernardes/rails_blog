<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-800">Blog Posts</h1>
  </div>

  <div id="posts" class="bg-white shadow-md rounded-lg divide-y divide-gray-200">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render 'post', post: post %>
      <% end %>
    <% else %>
      <p class="text-center py-10 text-gray-500">No posts found.</p>
    <% end %>
  </div>
  
  <% if @posts.any? %>
    <div class="mt-8 flex justify-center">
      <%== pagy_simple_nav(@pagy) %>
    </div>
  <% end %>
</div>
