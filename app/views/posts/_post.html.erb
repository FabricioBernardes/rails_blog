<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Título:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Corpo:</strong>
    <%= post.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= post.slug %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= post.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Usuário:</strong>
    <%= post.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Publicado em:</strong>
    <%= post.published_at %>
  </div>
</div>
