<% content_for :title, "Post Details" %>

<div class="md:w-2/3 w-full mx-auto bg-white shadow-md rounded-lg p-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl text-gray-800 mb-4">Post Details</h1>

  <div class="space-y-4">
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Title:</h2>
      <p class="text-gray-600"><%= @post.title %></p>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Body:</h2>
      <p class="text-gray-600"><%= simple_format(@post.body) %></p>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Slug:</h2>
      <p class="text-gray-600"><%= @post.slug %></p>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Status:</h2>
      <p class="text-gray-600 capitalize"><%= @post.status %></p>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Published At:</h2>
      <p class="text-gray-600"><%= @post.published_at || 'Not published yet' %></p>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row sm:space-x-2 mt-6 pb-8">
    <%= link_to "Edit Post", edit_admin_post_path(@post), class: "w-full sm:w-auto text-center rounded-md px-4 py-2 bg-yellow-500 hover:bg-yellow-400 text-white font-medium" %>
    <%= link_to "Back to Posts", admin_posts_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium" %>
  </div>

  <%= button_to "Delete Post", admin_post_path(@post), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0", class: "w-full sm:w-auto rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium", data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
</div>
